<mvc:View controllerName="logaligroup.employees.controller.MainView" 
            xmlns:mvc="sap.ui.core.mvc" 
            displayBlock="true" 
            xmlns="sap.m"
            xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox id="hbox1">
                            <Label id="labelEmployee" labelFor="inputEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" value="{jsonCountries>/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"/>
                            <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="true"/>
                            <Select id="slCountry" forceSelection="false" selectedKey="{jsonCountries>/CountryKey}" items="{jsonCountries>/ListCountry}" visible="true">
                                <items>
                                    <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>                                    
                                </items>
                            </Select>
                            <Button id="filtro" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                            <Button id="clear" text="{i18n>btnClear}"  icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
                        </HBox>
                         <HBox>
                            <core:Fragment fragmentName="logaligroup.employees.fragment.TableEmployee" type="XML"/>
                         </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
