<mvc:View controllerName="logaligroup.employees.controller.EmployeeDetails" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core">
    <Page id="pag1" title="{i18n>employeeDetails}">           
        <Panel id="panel1">        
            <FlexBox id="flex1" height="65px" alignItems="Center" justifyContent="Center">
                <items>
                    <Text id="text1" text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}" class="boldText"/>
                </items>
            </FlexBox>
            <FlexBox id="flex2" height="65px" alignItems="Start" justifyContent="SpaceBetween">
                <items>
                    <VBox id="box1">
                        <Text id="text2" text="{i18n>employeeID}" class="boldText sapUiTinyMarginEnd"/>
                        <Text id="text3" text="{jsonEmployees>EmployeeID}"/>
                    </VBox>
                    <VBox id="box2">
                        <Text id="text4" text="{i18n>titleEmployee}" class="boldText"/>
                        <Text id="text5" text="{jsonEmployees>Title}"/>                    
                    </VBox>
                </items>
            </FlexBox>
            <FlexBox id="flex3" alignItems="Start">
                <items>
                    <HBox id="box3">
                        <Text id="text6" text="{i18n>countryCode}" class="boldText sapUiTinyMarginEnd"/>
                        <Text id="text7" text="{jsonEmployees>Country}"/>
                        <layoutData>
                            <FlexItemData id="flexitem" growFactor="3"></FlexItemData>
                        </layoutData>
                    </HBox>
                    <HBox id="box4">
                        <Text id="text8" text="{i18n>city}" class="boldText sapUiTinyMarginEnd"/>
                        <Text id="text9" text="{jsonEmployees>City}"/>
                        <layoutData>
                            <FlexItemData id="flexitem2"  growFactor="2"></FlexItemData>
                        </layoutData>
                    </HBox>
                    <FlexBox  id="flex6" direction="Row" alignItems="Start">
                        <Text id="text10" text="{i18n>postalCode}" class="boldText sapUiTinyMarginEnd"/>
                        <Text id="text11" text="{jsonEmployees>PostalCode}"/>
                        <layoutData>
                            <FlexItemData  id="flexitem3" growFactor="1"></FlexItemData>
                        </layoutData>
                    </FlexBox>                
                </items>
            </FlexBox>
        </Panel>
    </Page>
</mvc:View>